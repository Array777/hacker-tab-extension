{
  "name": "hacker-tab-extension",
  "version": "0.0.0",
  "description": "Browser extension for hackers",
  "license": "MIT",
  "keywords": [
    "react",
    "github",
    "browser extension",
    "chrome extension",
    "firefox extension"
  ],
  "main": "src/index.js",
  "dependencies": {
    "@atlaskit/select": "^10.2.2",
    "@emotion/core": "^10.0.22",
    "@emotion/styled": "^10.0.23",
    "@huchenme/github-trending": "^2.1.1",
    "append-query": "^2.1.0",
    "emotion-theming": "^10.0.19",
    "lodash": "^4.17.15",
    "polished": "^3.4.2",
    "prop-types": "^15.7.2",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-event-listener": "^0.6.6",
    "react-popper": "^1.3.4",
    "react-scripts": "^3.2.0",
    "react-spring": "^8.0.27",
    "styled-components": "^3.4.10"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@storybook/addon-actions": "^5.2.5",
    "@storybook/addon-centered": "^5.2.5",
    "@storybook/addon-links": "^5.2.5",
    "@storybook/addon-notes": "^5.2.5",
    "@storybook/addons": "^5.2.5",
    "@storybook/react": "^5.2.5",
    "@testing-library/jest-dom": "^4.2.3",
    "@testing-library/react": "^9.3.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0",
    "webpack-cli": "^3.3.10"
  },
  "scripts": {
    "start": "react-scripts start",
    "storybook": "start-storybook -p 6006",
    "test": "react-scripts test --env=jsdom",
    "prebuild": "rimraf build",
    "build": "npm-run-all build:*",
    "build:app": "INLINE_RUNTIME_CHUNK=false react-scripts build",
    "build:bg": "webpack --mode production ./src/background.js --output ./build/background.js",
    "build:bg:dev": "webpack --mode development ./src/background.js --output ./build/background.js",
    "prezip": "rimraf *.zip",
    "zip": "npm-run-all zip:*",
    "zip:build": "cd build; zip -r ../build.zip * -x '*.DS_Store'",
    "zip:src": "zip -r src.zip src package.json README.md public -x '*.DS_Store'",
    "prebuild-storybook": "rimraf storybook-static",
    "build-storybook": "build-storybook",
    "release": "npm-run-all build zip"
  },
  "eslintConfig": {
    "extends": "react-app",
    "env": {
      "browser": true,
      "webextensions": true
    },
    "rules": {
      "no-use-before-define": "off"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true
  }
}
